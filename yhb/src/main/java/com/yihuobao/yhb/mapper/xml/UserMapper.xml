<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yihuobao.yhb.mapper.UserMapper">
    <insert id="insertUser" parameterType="com.yihuobao.yhb.entity.User">
        insert into Users (id, phoneNumber, password,  accountStatus, createdAt, updatedAt)
        values (#{id}, #{phoneNumber}, #{password},  #{accountStatus}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="selectByPhoneNumber" parameterType="String" resultType="com.yihuobao.yhb.entity.User">
        select * from Users where phoneNumber = #{phoneNumber}
    </select>

    <select id="selectByUserEmail" parameterType="String" resultType="com.yihuobao.yhb.entity.User">
        select * from Users where userEmail = #{userEmail}
    </select>

    <select id="selectByPhoneAndPassword" resultType="com.yihuobao.yhb.entity.User">
        select * from Users where phoneNumber = #{phoneNumber} and password = #{password}
    </select>



</mapper>
